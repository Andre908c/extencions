{
  "manifest_version": 3,
  "name": "Extractor Universal + Optimización Pro v67.6",
  "version": "67.6",
  "description": "Consola inteligente con corrección de PiP, persistencia de configuración, ahorro de RAM y Foco de Audio.",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "runtime"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scriptlet.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
